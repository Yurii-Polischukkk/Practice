            <label for="exampleInputConfirmPassword2" class="col-sm-3 col-form-label">  @Html.DisplayNameFor(model => model.Model)</label>
            <div class="col-sm-9">
                <label for="exampleInputConfirmPassword2" class=" col-form-label">  @Html.DisplayFor(model => model.Model)</label>
            </div>
        </div>
