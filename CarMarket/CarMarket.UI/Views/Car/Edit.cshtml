@using CarMarket.Core
@model CarMarket.Repos.Dto.CarCreateDto
@{
    var brands = ViewBag.Brands as IEnumerable<Brand>;
    var models = ViewBag.Models as IEnumerable<Model>;
    Layout = "~/Views/Shared/_BreezeLayout.cshtml";
}
<div class="content-wrapper pb-0 text-center">
<h4>Car</h4>
<hr />


    <div class="col-12 grid-margin">
        <div class="card">
            <form asp-action="Edit" enctype="application/x-www-form-urlencoded">
                @Html.AntiForgeryToken()
            <div class="card-body">
                <h4 class="card-title">Horizontal Two column</h4>
                <div class="form-sample">
                    <p class="card-description">Personal info</p>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" asp-for="Name"></label>
                                <div class="col-sm-9">
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label" asp-for="Description"></label>
                                <div class="col-sm-9">
                                    <input asp-for="Description" class="form-control" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <div class="mb-3">
                                    <label class="form-label" </label>
                                </div>
                                <label class="col-sm-3 col-form-label" asp-for="Brand"></label>
                                <div class="col-sm-9">
                                        <select class="form-select" size="3" id="brands" name="brands">
                                            @foreach (var b in brands)
                                            {
                                                var selected = @Model.Brand == b.Name ? true : false;
                                                        <!option value="@b.Name" @(selected ? "selected" : "")>@b.Name</!option>
                                            }
                                        </select>
                                </div>
                            </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <div class="mb-3">
                                            <label class="form-label"> </label>
                                        </div>
                                        <label class="col-sm-3 col-form-label" asp-for="Model"></label>
                                        <div class="col-sm-9">
                                            <select class="form-select" size="3" id="models" name="models">
                                                @foreach (var m in models)
                                                {
                                                    var selected = @Model.Model == m.Name ? true : false;
                                                    <!option value="@m.Name" @(selected ? "selected" : "")>@m.Name</!option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <div class="form-group">
                                    <label class="control-label" </label>

                                </div>
                                <label class="col-sm-3 col-form-label" asp-for="Price"></label>
                                <div class="col-sm-9">
                                    <input asp-for="Price" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <div class="form-group">
                                    <label class="control-label" </label>
                                </div>
                                <label class="col-sm-3 col-form-label" asp-for="Color"></label>
                                <div class="col-sm-9">
                                    <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label" asp-for="Engine"></label>
                                    <div class="col-sm-4">
                                        <input asp-for="Engine" class="form-control" />
                                        <span asp-validation-for="Engine" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <div class="form-group">
                                        <label class="control-label" </label>

                                    </div>
                                    <label class="" col-sm-3 col-form-label" asp-for="ImgPath"></label>
                                    <div class="col-sm-9">
                                        <input class="form-control" name="picture" id="picture" asp-for="ImgPath" type="file" />
                                        <input class="col-sm-3 col-form-label"  type="hidden" value="0"></input>
                                        <span asp-validation-for="ImgPath" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                            
                        </div>

                    <div class="row">

                        <div class="form-group">
                            <input type="submit" value="Зберегти" class="btn btn-primary" />
                        </div>
                    </div>

                </div>
                    </form>
                    <!--сторого залишити-->
                </div>
            </div>
        </div>
    </div>
@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function () {
            $(".form-select").select2();
        });
    </script>
}  